<!-- 巨幕开始 -->
<div class="container">
	<div class="jumbotron" style="padding:20px;">
		<div class="dis" style="width:40%;display:inline-block">
			<img src="images/1.jpg" style="width:100%;border-radius:10px;">
		</div>
		<div class="dis" style="width:58.535%;height:300px;border-radius:10px;;float:right;display:inline-block;">
			<h3>精彩推荐：</h3>
			<p>Welcome</p>
		</div>
	</div>
	<div class="row">
		<% catList.forEach(function(dat){ %>
		<div class="col-md-3">
			<h3><%=dat.name%></h3>
			<ul class="list-group">
				<% dat.arc.forEach(function(val){ %>
			  <li class="list-group-item"><a href="/index/arc/<%=val._id%>"><%=val.title%></a></li>
			  <% }) %>
			</ul>
		</div>
		<% }) %>
	</div>
</div>
<!-- 巨幕结束 -->

<!--友情链接-->
