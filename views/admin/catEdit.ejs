<!-- header  -->
<% include header_min %>
<div class="container">
    <h3 class="title">添加分类</h3>
    <div class="row">
        <div class="col-md-3">
        </div>        
        <div class="col-md-6">
            <form action="/admin/catUpdate" method="post" enctype="multipart/form-data">

                <div class="input-group form-group">
                  <span class="input-group-addon">名称</span>
                  <input type="text" name="name" class="form-control" value="<%=data.name%>">
                  <input type="hidden" name="_id" class="form-control" value="<%=data._id%>">
                </div>
                <!-- 排序 -->
                <div class="input-group form-group">
                  <span class="input-group-addon">排序</span>
                  <input type="number" name="order" class="form-control" value="<%=data.order%>">
                </div>
                <!-- 封面 -->
                <div class="form-group input-group">
                    <span class="input-group-addon">封面</span>
                    <input type="file" name="imgUrl" class="form-control" value="/<%=data.imgUrl%>">
                </div>
                <!--介绍-->
                <div class="form-group input-group">
                    <span class="input-group-addon">介绍</span>
                    <textarea class="form-control" name="info" value=""><%=data.info%></textarea>
                </div>

                 <div class="form-group input-group">
                    <button type="submit" class="btn btn-default">Submit</button>
                 </div>
            </form>
        </div>        
        <div class="col-md-3">
        </div>        
    </div>    

</div>

<!-- footer  -->
<% include footer_min %>