<!-- header  -->
<% include header_min %>
  <div class="container">
    <h3 class="title">文章列表</h3>
    <table class="table listuser-table">
      <tr>
        <td>图片</td>
          <td>标题</td>
          <td>作者</td>
          <td>分类名称</td>
          <td>时间</td>
          <td>操作</td>
      </tr>
      <% datalist.forEach(function(val){ %>
      <tr>
        <td><img src="/<%=val.imgUrl%>"></td>
        <td class="a"><%=val.title%></td>
        <td class="a"><%=val.author%></td>
        <td class="a"><%=val.catId.name%></td>
        <td class="a"><%=val.ctime.toLocaleString()%></td>
        <td class="a">
          <a href="/admin/arcEdit/<%=val._id%>">编辑</a>
          |
          <a href="/admin/arcDel/<%=val._id%>" onclick="return confirm('你确定要删除吗？')">删除</a>
        </td>
      </tr>
      <% }) %>
    </table>

  </div>
<% include footer_min %>